%p#notice= notice

%p
  %b domain
  = @website.domain

= link_to 'New place', new_website_place_path(@website)

%h2 Places
%table
  %tr
    %th name
    %th style
    %th
  - @website.places.each do |place|
    %tr
      %td
        = in_place_editor_field :place, :name, { :object => place }
      %td= place.geometry
      %td
        
        

%hr
= link_to 'Edit', edit_website_path(@website)
\|
= link_to 'Destroy', @website, :confirm => 'Are you sure?', :method => :delete
\|
= link_to 'Back', websites_path
