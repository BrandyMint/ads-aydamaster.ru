= form_for @ad_style do |f|
  -if @ad_style.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ad_style.errors.count, "error")} prohibited this ad_style from being saved:"
      %ul
        - @ad_style.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .actions
    = f.submit 'Save'
