= form_for @geometry do |f|
  -if @geometry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@geometry.errors.count, "error")} prohibited this geometry from being saved:"
      %ul
        - @geometry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .actions
    = f.submit 'Save'
